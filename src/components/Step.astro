---
interface Props {
  num: number;
  date: Date;
  title: string;
  desc: string;
  action: {
    text: string;
    link: string;
  };
  direction: "left" | "right";
}

const { num, date, title, desc, action, direction } = Astro.props;
---

<div
  class={`flex w-2/3 items-center justify-start ${direction === "right" ? "flex-row-reverse" : ""}`}
>
  <div
    class={`flex w-1/2 items-center justify-start gap-5 md:items-start ${direction === "right" ? "flex-row-reverse" : ""}`}
  >
    <p
      style="writing-mode: vertical-lr; text-orientation: upright;"
      class="[writing-mode]-[tb\-rl] text-apexlight text-xl font-black uppercase"
    >
      {date.toDateString().split(" ").slice(1, 3).join(" ")}
    </p>
    <div class="flex flex-col items-start justify-start gap-3">
      <div
        class={`flex justify-start w-full items-center gap-3 ${direction === "right" ? "flex-row-reverse" : ""}`}
      >
        <p
          class="bg-apexdark flex aspect-square w-10 items-center justify-center rounded-full font-bold"
        >
          {num}
        </p>
        <p class="font-special text-4xl font-medium uppercase tracking-widest">
          {title}
        </p>
      </div>
      <p
        class={`text-xl ${direction === "right" ? "text-right" : "text-left"}`}
      >
        {desc}
      </p>
    </div>
  </div>
  <div class="flex w-1/2 items-center justify-center">
    {/* hackiest way possible to fix css letter spacing */}
    <a
      style="direction: rtl;"
      class="bg-apexlight rounded-full p-5 indent-[-0.5em] text-2xl font-black uppercase tracking-[0.5em] text-black"
      href={action.link}
      >{action.text}
    </a>
  </div>
</div>
